{
    "compilerOptions": {
        "rootDirs":  [
            "./src",
            "./test",
        ],
        "lib": [
            "es6",
            "es2015.promise",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "skipLibCheck": true,
        "target": "es6"
    },

    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "provision"
    ]
}